<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="create-user">
                <form method="POST" action="/users/create-user">
                    <div class="row col-6">
                        <div class="col-12 mt-3" style="font-size: 1.5em; font-weight: 600;">Create New User</div>
                        <div class="my-3 col-12">
                            <label class="form-label">Email address</label>
                            <input name="email" type="email" class="form-control" required>
                        </div>
                        <div class="col-6"></div>

                        <div class="mb-3 col-12">
                            <label class="form-label">Password</label>
                            <input name="password" type="password" class="form-control" required>
                        </div>
                        <div class="col-6"></div>

                        <div class="mb-3 col-12">
                            <label class="form-label">Username</label>
                            <input name="username" type="text" class="form-control" required>
                        </div>

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="table-user">
                <div class="title my-3" style="font-size: 1.5em; font-weight: 600;">User Table</div>
                <table class="table table-hover table-bordered ">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row">
                                    <%= item.id %>
                                </th>
                                <td>
                                    <%= item.username %>
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <form style="display: inline;" action="/update-user/<%= item.id %>" method="POST">
                                        <button type="submit" class="btn btn-warning">Edit</button>
                                    </form>

                                    <form style="display: inline;" action="/delete-user/<%= item.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>