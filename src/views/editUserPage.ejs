<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="update-user container">
        <form method="POST" action="/users/update-user/<%= userData.id%>">
            <div class="row col-6">
                <div class="col-12 mt-3" style="font-size: 1.5em; font-weight: 600;">Create New User</div>
                <div class="my-3 col-12">
                    <label class="form-label">Email address</label>
                    <input value="<%= userData.email%>" name="email" type="email" class="form-control" required>
                </div>
                <div class="col-6"></div>

                <div class="mb-3 col-12">
                    <label class="form-label">Username</label>
                    <input value="<%= userData.username%>" name="username" type="text" class="form-control" required>
                </div>

                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>
</body>

</html>